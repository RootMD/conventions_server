    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gra in gras %}
            <tr>
                <td>{{ gra.id }}</td>
                <td>{{ gra.nazwa }}</td>
                <td>
                    <a href="{{ path('gra_show', {'id': gra.id}) }}">show</a>
